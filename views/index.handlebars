<div class="jumbotron">
    
    {{#if user}}
        <h1 class="display-4" style="color:black">Olá, <span style="color:red">{{user.nome}}</span></h1>
    {{else}}
        <h1 class="display-4" style="color:red">Seja Bem-vindo</h1>
    {{/if}}

    <p class="lead">Website direcionado ao controle de registro de Funcionários.</p>
    <hr class="my-4">
    <a class="btn btn-primary btn-lg" href="#" role="button" style="color:red">Clique Aqui</a>
</div>

{{#each funcs}}
    <div class="card mt-3">
        <div class="card-body">
            <a href="/info/{{matricula}}"> <h5>{{nome}}</h5> </a>
            <p style="color:blue; font-weight:bold">[{{matricula}}]</p>
        </div>
    </div>
{{/each}}
