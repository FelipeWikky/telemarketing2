{{#each erros}}
    <div class="alert alert-danger" role="alert" style="height: 45px"> {{msg}} </div>
{{/each}}

{{#each success}}
    <div class="alert alert-success" role="alert"> <strong>{{msg}}</strong> </div>
{{/each}}

{{#each fail}}
    <div class="alert alert-danger" role="alert"> <strong>{{msg}}</strong> </div>
{{/each}}

<h4 style="text-align: center; color:blue; font-weight: bold; border: 2px solid; border-color: black; background: #e6e2e2a2" >
    Cadastro de Funcionários
</h4>

<div class="card">
    <div class="card-body">
        <form action="/cad/funcionario" method="post">

            <label for="matr">Matrícula</label>
            <input type="text" class="form-control form-control-sm" name="matr" id="matr" placeholder="XXXX-XX" required pattern="\d{4}-\d{2}"/>

            <label for="nome">Nome Completo</label>
            <input type="text" class="form-control form-control-sm" name="nome" id="nome">

            <label for="nasc">Data de Nascimento</label>
            <input type="text" class="form-control form-control-sm" name="nasc" id="nasc" placeholder="AAAA-MM-DD" required pattern="\d{4}-\d{2}-\d{2}">
            
            <label for="genero">Gênero</label> <br>
            <select name="genero" id="genero" class="form-control form-control-sm" style="max-width: 50%; width:150px">
                <option value="M">Masculino</option>
                <option value="F">Feminino</option>
            </select>

            <label for="admissao">Data de Admissão</label>
            <input type="text" class="form-control form-control-sm" name="admissao" id="admissao" placeholder="AAAA-MM-DD"  pattern="\d{4}-\d{2}-\d{2}">

            <label for="categoria">Categoria</label>
            <select name="categoria" id="categoria" class="form-control form-control-sm" style="max-width: 50%; width:150px">
                {{#each cats}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Sem Categoria</option>
                {{/each}}
            </select>
            
            <button type="submit" class="btn btn-outline-success mt-4">Cadastrar Funcionário</button>
        </form>
    </div>
</div>

{{#each funcs}}
    <div class="card mt-3">
        <div class="card-body">
            <a href="/info/{{_id}}"> <small style="font-weight: bold">{{categoria._id}}</small> </a>
            <h4 style="color:blue">{{nome}}</h4>
            <h5>Dt.Nascimento.: {{dtNasc}}</h5>
            <h5>Gênero.: {{genero}}</h5>
            <h5>Dt.Admissão.: {{dtAdmissao}}</h5>
            <h5>Categoria.: {{categoria.nome}}</h5>
        </div>
    </div>
{{else}}
    <div class="card mt-4">
        <h4>Não há Funcionários Registrados</h4>
    </div>
{{/each}}